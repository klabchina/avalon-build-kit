<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/menu_left_item_real_name"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/kk_gamesdk_ic_real_name"
                android:scaleType="centerInside"
                android:contentDescription="@string/kk_gamesdk_real_name_submit"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_toggle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/kk_gamesdk_ic_floating_btn_nor"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/layout_right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/menu_right_item_real_name"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/kk_gamesdk_ic_real_name"
                android:scaleType="centerInside"
                android:contentDescription="@string/kk_gamesdk_real_name_submit"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
